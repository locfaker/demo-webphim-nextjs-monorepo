generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id           String   @id @default(cuid())
  title        String
  slug         String   @unique
  description  String?
  posterUrl    String?
  backdropUrl  String?
  releaseYear  Int?
  imdbRating   Float?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([slug])
}
